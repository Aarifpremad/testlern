<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Product</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/dashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .main-container {
      display: flex;
      flex-direction: row;
    }

    .content-container {
         margin-left: 260px; 
         margin-top: 70px; 
          padding: 20px;
          width: 100%;
         height: 100vh;
        }

        @media (max-width: 768px) {
            .content-container {
                margin-left:auto
            }
        }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
    #preview-images {
  display: block; /* Change from flex to block for better overflow behavior */
  max-height: 300px; /* Adjust this as per your preference */
  overflow-y: auto;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
  background-color: #f8f9fa;
}
#preview-images img {
  width: 80px; /* Adjust width for better image scaling */
  height: 80px;
  object-fit: cover;
  border: 1px solid #ddd;
  border-radius: 5px;
}
#preview-images {
  display: block;
  overflow-y: auto;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
  background-color: #f8f9fa;
}

    .form-label {
      font-weight: bold;
    }

    .formContainer {
            overflow: aut
        }

        /* Adjust the form for mobile responsiveness */
        @media (max-width: 768px) {
            .container {
                max-width: 100%;
                margin: 0 10px;
            }
        }

        .preview {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-top: 10px;
            max-height: 200px;
            overflow-y: auto;
        }
        .preview img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <div class="main-container">
    <%- include('partials/sidebar', { page: 'product' }) %>

    <div class="content-container">
      <h1>Create Product</h1>

      <form id="create-product-form" action="/admin/create-product" method="POST" enctype="multipart/form-data">
        <!-- Product Name -->
        <div class="mb-3">
          <label for="name" class="form-label">Product Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <!-- Brand -->
        <div class="mb-3">
          <label for="brand" class="form-label">Brand</label>
          <select id="brand" name="brand" class="form-control"></select>
          <!-- <input type="text" class="form-control" id="brand" name="brand" required> -->
        </div>

        <!-- SKU Code -->
        <div class="mb-3">
          <label for="skuCode" class="form-label">SKU Code</label>
          <input type="text" class="form-control" id="skuCode" name="skuCode" required>
        </div>

        <!-- URL Key -->
        <div class="mb-3">
          <label for="urlKey" class="form-label">URL Key</label>
          <input type="text" class="form-control" id="urlKey" name="urlKey" required>
        </div>

        <!-- Visibility -->
        <div class="mb-3">
          <label for="visibility" class="form-label">Visibility</label>
          <select id="visibility" name="visibility" class="form-control">
            <option value="true" selected>Visible</option>
            <option value="false">Hidden</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="size" class="form-label">Size</label>
          <select id="sizef" name="size" class="form-select">
            <option value="">Select Size</option>
            <option value="S">Small</option>
            <option value="M">Medium</option>
            <option value="L">Large</option>
            <option value="XL">Extra Large</option>
          </select>
        </div>

        <!-- Product Label -->
        <div class="mb-3">
          <label for="productLabel" class="form-label">Product Label</label>
          <input type="text" class="form-control" id="productLabel" name="productLabel">
        </div>

        <div class="mb-3">
          <label for="producttype" class="form-label">Product Type</label>
          <input type="text" class="form-control" id="producttype" name="producttype">
        </div>

        <!-- Categories -->
        <div class="mb-3">
          <label for="categories" class="form-label">Categories</label>
          <select id="categories" name="categories[]" class="form-control" multiple required></select>
        </div>

        <!-- Subcategories -->
        <div class="mb-3">
          <label for="subCategories" class="form-label">SubCategories</label>
          <select id="subCategories" name="subCategories[]" class="form-control" multiple required></select>
        </div>

        <div class="mb-3">
          <label for="relatedProducts" class="form-label">Related Products</label>
          <select id="relatedProducts" name="linkedProducts[relatedProducts][]" class="form-control" multiple></select>
        </div>
        <div class="mb-3">
          <label for="group" class="form-label">Group</label>
          <select id="group" name="group" class="form-control"></select>
        </div>

        <div class="mb-3">
          <label for="unit" class="form-label">Unit</label>
          <select id="unit" name="unit" class="form-control"></select>
        </div>
        <div class="mb-3">
          <label for="serialNo" class="form-label">Product Serial No</label>
          <input type="text" class="form-control" id="serialNo" name="serialNo" required>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Prices</label>
          <div class="row">
            <div class="col-md-3">
              <input type="number" class="form-control" name="price[price]" placeholder="Price" step="0.01" min="0" required>
            </div>
            <div class="col-md-3">
              <input type="number" class="form-control" name="price[ourPrice]" placeholder="Our Price" step="0.01" min="0" required>
            </div>
            <div class="col-md-3">
              <input type="number" class="form-control" name="price[ourCutPrice]" placeholder="Our Cut Price" step="0.01" min="0" required>
            </div>
            <div class="col-md-3">
              <input type="number" class="form-control" name="price[ourFullCutPrice]" placeholder="Full Cut Price" step="0.01" min="0" required>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" id="description" name="description" required>
        </div>
        <div class="mb-3">
          <label for="images" class="form-label">Product Images</label>
          <input type="file" id="images" name="images" multiple accept="image/*" required>
          <div class="preview" id="preview"></div>
      </div>
        <div class="mb-3">
          <label for="seo_meta_title" class="form-label">SEO Meta Title</label>
          <input type="text" class="form-control" id="seo_meta_title" name="metaDescription[metaTitle]" required>
        </div>

        <div class="mb-3">
          <label for="seo_meta_description" class="form-label">SEO Meta Description</label>
          <textarea class="form-control" id="seo_meta_description" name="metaDescription[metaDescription]" rows="3" required></textarea>
        </div>

        <div class="mb-3">
          <label for="seo_meta_keywords" class="form-label">SEO Meta Keywords</label>
          <input type="text" class="form-control" id="seo_meta_keywords" name="metaDescription[metaKeywords]" required>
        </div>


        <div class="mb-3">
          <label for="Tiles" class="form-label">Tiles Specifications</label>
          <div class="row gy-3">
            <div class="col-md-6">
              <input type="text" class="form-control" name="tdescription" placeholder="Enter Description" required>
            </div>
            <div class="col-md-6">
              <select id="finish" name="finish[]" class="form-select" multiple>
                <option value="" disabled >Select Finish</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="material" name="material[]" class="form-select" multiple>
                <option value="" disabled >Select Material</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="glaze" name="glaze" class="form-select" required>
                <option value="" disabled selected>Select Glaze</option>
                <option value="Glazed">Glazed</option>
                <option value="No">No</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="Rectified" name="Rectified" class="form-select" required>
                <option value="" disabled selected>Select Rectified</option>
                <option value="Rectified">Rectified</option>
                <option value="No">No</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="color" name="color[]" class="form-select" multiple>
                <option value="" disabled >Select Color</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="thickness" name="thickness[]" class="form-select" multiple>
                <option value="" disabled>Select Thickness</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="recommendedRoom" name="recommendedRoom[]" class="form-select" multiple>
                <option value="" disabled>Select Recommended Room</option>
              </select>
            </div>
            <div class="col-md-6">
              <input type="number" class="form-control" name="quantityPerSquareMeter" placeholder="Enter Quantity Per Square Meter" required>
              </select>
            </div>
            <div class="col-md-6">
              <select id="type" name="type[]" class="form-select" multiple>
                <option value="" disabled>Select Type</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="print" name="print[]" class="form-select" multiple>
                <option value="" disabled>Select Print</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="usage" name="usage[]" class="form-select" multiple>
                <option value="" disabled>Select Usage</option>
              </select>
            </div>
            <div class="col-md-6">
              <select id="sizeMM" name="sizeMM" class="form-select">
                <option value="" disabled>Size (MM)</option>
              </select>
            </div>
            <div class="col-md-6">
              <input type="number" class="form-control" name="boxQuantity" placeholder="Enter Box Quantity" required>
            </div>
            <div class="col-md-6">
              <input type="number" class="form-control" name="wastage" placeholder="Enter Wastage" required>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Create Product</button>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
  <script>
const cimagesInput = document.getElementById('images');
        const cpreviewContainer = document.getElementById('preview');
        cimagesInput.addEventListener('change', (event) => {
            const files = event.target.files;
            Array.from(files).forEach(file => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    cpreviewContainer.appendChild(img);
                };
                reader.readAsDataURL(file);
            });
        });
  
        $(document).ready(function () {
  $('#categories, #subCategories, #relatedProducts, #group, #unit, #brand, sizeMM, #usage, #print, #type,  #recommendedRoom, #thickness, #color, #material, #finish').select2();


  $('#finish').select2({
    placeholder: "Select Finish",
    allowClear: true
  });

  $('#material').select2({
    placeholder: "Select Material",
    allowClear: true
  });

  $('#glaze').select2({
    placeholder: "Select Glaze",
    allowClear: true
  });

  $('#Rectified').select2({
    placeholder: "Select Rectified",
    allowClear: true
  });

  $('#color').select2({
    placeholder: "Select Color",
    allowClear: true
  });

  $('#thickness').select2({
    placeholder: "Select Thickness",
    allowClear: true
  });

  $('#recommendedRoom').select2({
    placeholder: "Select Recommended Room",
    allowClear: true
  });

  $('#type').select2({
    placeholder: "Select Type",
    allowClear: true
  });

  $('#print').select2({
    placeholder: "Select Print",
    allowClear: true
  });

  $('#usage').select2({
    placeholder: "Select Usage",
    allowClear: true
  });

  $('#sizeMM').select2({
    placeholder: "Select Size (MM)",
    allowClear: true
  });
  fetch('/admin/categoriesselect')
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      data.categories.forEach(category => {
        $('#categories').append(new Option(category.name, category._id));
      });
      data.subCategories.forEach(subCategory => {
        $('#subCategories').append(new Option(subCategory.name, subCategory._id));
      });
      data.group.forEach(group => {
        $('#group').append(new Option(group.name, group.name));
      });
      data.unit.forEach(unitd => {
        $('#unit').append(new Option(unitd.name, unitd.name));
      });
      data.size.forEach(sized => {
        $('#sizeMM').append(new Option(sized.size, sized.size));
      });
      data.brand.forEach(brandd => {
        $('#brand').append(new Option(brandd.name, brandd.name));
      });
      data.specsFinish.forEach(finish => {
        $('#finish').append(new Option(finish.name, finish.name));
      });
      data.specsMaterial.forEach(material => {
        $('#material').append(new Option(material.name, material.name));
      });
      data.color.forEach(color => {
        $('#color').append(new Option(color.name, color.name));
      });
      data.specsThickness.forEach(thickness => {
        $('#thickness').append(new Option(thickness.thickness, thickness.thickness));
      });
      data.specsRoom.forEach(room => {
        $('#recommendedRoom').append(new Option(room.room, room.room));
      });
      data.specsType.forEach(type => {
        $('#type').append(new Option(type.type, type.type));
      });
      data.specsPrint.forEach(print => {
        $('#print').append(new Option(print.print, print.print));
      });
      data.specsUsage.forEach(usage => {
        $('#usage').append(new Option(usage.usage, usage.usage));
      });
    }
  })
    .catch(err => {
      console.error('Error fetching categories:', err);
    });
  fetch('/admin/productsselect')
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        data.products.forEach(product => {
          $('#relatedProducts').append(new Option(product.name, product._id));
        });
      }
    })
    .catch(err => {
      console.error('Error fetching products:', err);
    });
  $('#create-product-form').on('submit', function (e) {
    e.preventDefault(); // Prevent default form submission
    const formData = new FormData(this);
    fetch('/admin/create-product', {
      method: 'POST',
      body: formData,
    })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          Swal.fire({
            icon: 'success',
            title: 'Product Created',
            text: data.message,
          });
          this.reset();
          $('#preview-images').empty();
          window.location.href = '/admin/productlist';
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message,
          });
        }
      })
      .catch(err => {
        console.error('Error submitting form:', err);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Something went wrong. Please try again.',
        });
      });
  });
});
  </script>

  <script>
     $(document).ready(function () {
    const urlParams = new URLSearchParams(window.location.search);
    const productId = urlParams.get('id');
    console.log(productId);

    if (productId) {
        fetch(`/admin/products/${productId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Populate form fields with fetched product data
                    $('#name').val(data.product.name);
                    $('#brand').val(data.product.brand).trigger('change');
                    $('#skuCode').val(data.product.sku);
                    $('#urlKey').val(data.product.urlKey);
                    $('#visibility').val(data.product.isVisible.toString()).trigger('change');
                    $('#sizef').val(data.product.size).trigger('change');
                    $('#productLabel').val(data.product.productLabel);
                    $('#producttype').val(data.product.producttype);
                    $('#categories').val(data.product.categories.map(category => category._id)).trigger('change');
                    console.log(data.product.subCategories , data.product.linkedProducts)
                    // $('#subCategories').val(data.product.subCategories.map(subCategory => subCategory._id)).trigger('change');
                    $('#relatedProducts').val(data.product.linkedProducts).trigger('change');
                    $('#group').val(data.product.group).trigger('change');
                    $('#unit').val(data.product.unit).trigger('change');
                    $('#serialNo').val(data.product.productSerialNo);
                    $('input[name="price[price]"]').val(data.product.price.price);
                    $('input[name="price[ourPrice]"]').val(data.product.price.ourPrice);
                    $('input[name="price[ourCutPrice]"]').val(data.product.price.ourCutPrice);
                    $('input[name="price[ourFullCutPrice]"]').val(data.product.price.ourFullCutPrice);
                    $('#description').val(data.product.description);
                    $('#seo_meta_title').val(data.product.metaDescription.metaTitle);
                    $('#seo_meta_description').val(data.product.metaDescription.metaDescription);
                    $('#seo_meta_keywords').val(data.product.metaDescription.metaKeywords.join(', '));
                    $('input[name="tdescription"]').val(data.product.tilesPerfection.description);
                    
                    // Tiles Perfection Fields
                    $('#finish').val(data.product.tilesPerfection.appearance).trigger('change');
                    $('#glaze').val(data.product.tilesPerfection.glaze).trigger('change');
                    $('#Rectified').val(data.product.tilesPerfection.rectified).trigger('change');
                    $('#color').val(data.product.tilesPerfection.color).trigger('change');
                    $('#type').val(data.product.tilesPerfection.type).trigger('change');
                    $('#print').val(data.product.tilesPerfection.print).trigger('change');
                    $('#usage').val(data.product.tilesPerfection.usage).trigger('change');
                    $('#sizeMM').val(data.product.tilesPerfection.sizeMM).trigger('change');
                    $('input[name="quantityPerSquareMeter"]').val(data.product.tilesPerfection.quantityPerSquareMeter);
                    $('input[name="boxQuantity"]').val(data.product.tilesPerfection.boxQuantity);
                    $('input[name="wastage"]').val(data.product.tilesPerfection.wastage);
                    
                    // **Handling Multi-Select Fields (Material, Thickness, Recommended Room)**
                    let materialValues = data.product.tilesPerfection.material.split(', ');
                    let thicknessValues = data.product.tilesPerfection.thickness.split(', ');
                    let recommendedRoomValues = data.product.tilesPerfection.recommendedRoom.split(', ');
                    let appearancevalue = data.product.tilesPerfection.appearance.split(', ');
                    let colorvalue = data.product.tilesPerfection.color.split(', ');
                    let typevalue = data.product.tilesPerfection.type.split(', ');
                    let printvalue = data.product.tilesPerfection.print.split(', ');
                    let usagevalue = data.product.tilesPerfection.usage.split(', ');

                    function populateSelectField(selector, values) {
                        values.forEach(value => {
                            if ($(selector + " option[value='" + value + "']").length === 0) {
                                $(selector).append(new Option(value, value));
                            }
                        });
                        $(selector).val(values).trigger('change');
                    }

                      $('#create-product-form button[type="submit"]').text('Update Product');

                    populateSelectField('#material', materialValues);
                    populateSelectField('#thickness', thicknessValues);
                    populateSelectField('#recommendedRoom', recommendedRoomValues);
                    populateSelectField('#finish', appearancevalue);
                    populateSelectField('#color', colorvalue );
                    populateSelectField('#type', typevalue );
                    populateSelectField('#usage', usagevalue );
                    populateSelectField('#print', printvalue );

                    function catsubp(selector, values) {
                      values.forEach(value => {
                        if ($(selector + " option[value='" + value._id + "']").length === 0) {
                          $(selector).append(new Option(value.name, value._id));
                        }
                      });
                      $(selector).val(values.map(value => value._id)).trigger('change');
                    }
                    catsubp('#subCategories', data.product.subCategories);
                    catsubp('#categories', data.product.categories);
                    catsubp('#relatedProducts', data.product.subCategories);

                    // Display existing images
                    data.product.images.forEach(image => {
                      const img = document.createElement('img');
                      img.src = `/uploads/${image}`;
                      cpreviewContainer.appendChild(img);
                    });

                }
            })
            .catch(error => console.error('Error fetching product:', error));
    }
});

  </script>
</body>
</html>
