<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category List</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/dashboard.css">

    <style>
        /* Optional: Add custom styling for DataTable */
        table.dataTable thead th {
            white-space: nowrap;
        }
        @media (max-width: 768px) {
            .dataTables_wrapper {
                overflow-x: auto;
            }
        }
    </style>
</head>
<body>

    <%- include('partials/header') %> <!-- Header Include -->
    <div class="main-container">
        <%- include('partials/sidebar', { page: 'categorylist' }) %> <!-- Sidebar Include -->

        <div class="container mt-4">
            <h1>Category List</h1>

            <!-- Filter Form -->
            <div class="mb-3">
                <label for="category-name" class="form-label">Filter by Name</label>
                <input type="text" id="category-name" class="form-control" placeholder="Search by category name">
            </div>

            <!-- DataTable -->
            <table id="category-table" class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Status</th>
                        <th>Product Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Categories will be dynamically loaded -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            const table = $('#category-table').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/admin/categories',
                    type: 'GET',
                    data: function (d) {
                        d.page = d.start / d.length + 1; // Convert to 1-based page number
                        d.limit = d.length;
                        d.name = $('#category-name').val(); // Apply name filter
                        d.draw = d.draw || 1;  // Ensure draw value is passed for correct response handling
                    },
                    dataSrc: function (json) {
                        // Handle the API response to fill the table
                        return json.data.map((category, index) => ({
                            ...category,
                            index: index + 1 + (json.draw - 1) * json.data.length, // Correct row index for pagination
                        }));
                    },
                },
                columns: [
                    { data: 'id' },
                    { data: 'name' },
                    { data: 'position' },
                    {
                        data: 'status',
                        render: function (data) {
                            return data ? 'Active' : 'Inactive';
                        },
                    },
                    { data: 'productCount' },
                    {
                        data: '_id',
                        render: function (data) {
                            return `
                                <button class="btn btn-info btn-sm me-2" onclick="editCategory('${data}')">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteCategory('${data}')">Delete</button>
                            `;
                        },
                    },
                ],
                pageLength: 10,
                lengthMenu: [10, 25, 50, 100],
                language: {
                    paginate: {
                        previous: '<',
                        next: '>',
                    },
                },
                drawCallback: function(settings) {
                    // This will update the total records count in the footer
                    const totalRecords = settings.json.recordsTotal;
                    $('#category-table_info').html(`Showing ${settings._iDisplayStart + 1} to ${settings._iDisplayEnd} of ${totalRecords} entries`);
                },
            });

            // Reload table with filter applied (on input change)
            $('#category-name').on('input', function () {
                table.ajax.reload();  // Reload table with new filter value
            });
        });

        function editCategory(id) {
            alert('Edit category with ID: ' + id);
        }

        function deleteCategory(id) {
            if (confirm('Are you sure you want to delete this category?')) {
                alert('Delete category with ID: ' + id);
            }
        }
    </script>
</body>
</html>
