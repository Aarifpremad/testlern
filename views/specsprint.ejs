<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Specs Print Management</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <style>
        .main-container {
            display: flex;
        }

        .content-container {
            flex: 1;
            padding: 20px;
        }

        .table-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="main-container">
        <%- include('partials/sidebar', { page: 'specsprint' }) %>
        <div class="content-container">
            <h1>Specs Print Management</h1>

            <!-- Add Specs Print Button -->
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addSpecsPrintModal">Add Specs Print</button>

            <!-- Specs Print Table -->
            <div class="table-container">
                <table id="specsPrintTable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Specs Print</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Add Specs Print Modal -->
    <div class="modal fade" id="addSpecsPrintModal" tabindex="-1" aria-labelledby="addSpecsPrintModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSpecsPrintModalLabel">Add New Specs Print</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addSpecsPrintForm">
                        <div class="mb-3">
                            <label for="specsPrint" class="form-label">Specs Print</label>
                            <input type="text" class="form-control" id="specsPrint" name="print" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Specs Print</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            const table = $('#specsPrintTable').DataTable({
                ajax: '/admin/specsprint', // API to fetch specs prints
                columns: [
                    { data: null, render: (data, type, row, meta) => meta.row + 1 }, // Row index
                    { data: 'print' }, // Specs Print
                    {
                        data: '_id',
                        render: function (data) {
                            return `
                                <button class="btn btn-danger btn-sm delete-specsprint" data-id="${data}">Delete</button>
                            `;
                        }
                    }
                ]
            });

            // Add New Specs Print
            $('#addSpecsPrintForm').submit(function (e) {
                e.preventDefault();
                const specsPrint = $('#specsPrint').val();

                $.post('/admin/specsprint', { print: specsPrint }, function () {
                    $('#addSpecsPrintModal').modal('hide');
                    table.ajax.reload(); // Refresh the table
                    $('#specsPrint').val(''); // Clear the input field
                });
            });

            // Delete Specs Print
            $('#specsPrintTable').on('click', '.delete-specsprint', function () {
                const specsPrintId = $(this).data('id');
                if (confirm('Are you sure you want to delete this Specs Print?')) {
                    $.ajax({
                        url: `/admin/specsprint/${specsPrintId}`,
                        type: 'DELETE',
                        success: function () {
                            table.ajax.reload(); // Refresh the table
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
